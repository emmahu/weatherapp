<div id="selected-city">
  <section id="city-header">
    <h2>{{name}}</h2>
    <h4>{{summary}}</h4>
    <h1>{{format-temperature hourly.temperature}}</h1>
  </section>
  <section id="today">
    <ul class="today-overview">
      <li>
        {{week-day localDate}}
      </li>
      <li>
        {{relativeDate}}
      </li>
      <li>
        {{format-temperature daily.temperatureMax}}
      </li>
      <li>
        {{format-temperature daily.temperatureMin}}
      </li>
    </ul>
    <div class="today-hourly-list-container">
      <ul class="today-hourly-list" {{bind-attr style=hourlyListWidth}}>
        {{#each forecast in hourlyData}}
          <li>
            <ul>
              <li>
                  {{!-- {{log forecast.first}} --}}
                  {{#if forecast.first}}
                    Now
                  {{else}}
                    {{format-time (local-date forecast.time offset=weatherData.offset) showMinutes=false}}
                  {{/if}}
              </li>
              <li>
                <img {{bind-attr src=forecast.icon}}/>
              </li>
              <li>
                {{format-temperature forecast.temperature}}
              </li>
            </ul>
          </li>
        {{/each}}
      </ul>
    </div>
  </section>
  <section id="forecast">
    <ul class="forecast-list">

    </ul>
  </section>
  <section id="today-details">
    <p class="today-summary"></p>
    <ul class="today-details-list">
    </ul>
  </section>
</div>
